<p id="notice"><%= notice %></p>
<div class = "container"></div>
<div class ="row justify-content-end">
<div class = "col-4">
<%= link_to 'Logout', logout_path,:class => "btn btn-primary btn-sm" %>


<%= link_to 'Edit Profile', edit_user_path(@current_user),:class => "btn btn-primary btn-sm" %></div>
</div>

<h1>Posts</h1>
<table>
  <tbody>
    <% @posts.each do |post| %>
      <div class = "row justify-content-start">
      <div class = "col">
        <strong>Title</strong> : <%= link_to "#{post.title}", post %>
      </div>
      </div>
      <div class ="row justify-content-start">
        <%= post.description %>
      </div>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path,:class => "btn btn-primary btn-sm" %>

